<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/y"
    tools:context=".Register">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#8BC34A"
        android:text=" Smart Farming System"
        android:textAllCaps="true"
        android:textColor="#EBE3E3"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonGraph"
        android:layout_width="157dp"
        android:layout_height="157dp"
        android:layout_marginTop="24dp"
        android:background="#8BC34A"
        android:text="Graph Geneator"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/buttonFieldA"
        android:layout_width="157dp"
        android:layout_height="157dp"
        android:layout_marginTop="24dp"
        android:background="#8BC34A"
        android:text="Field A"
        android:textColor="#151614"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toEndOf="@+id/buttonGraph"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/buttonFieldB"
        android:layout_width="157dp"
        android:layout_height="157dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="32dp"
        android:background="#8BC34A"
        android:cursorVisible="false"
        android:isScrollContainer="true"
        android:keepScreenOn="true"
        android:text="Field B"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGraph" />

    <Button
        android:id="@+id/buttonManure"
        android:layout_width="157dp"
        android:layout_height="157dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="32dp"
        android:background="#8BC34A"
        android:text="Manure quantity graph"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toEndOf="@+id/buttonFieldB"
        app:layout_constraintTop_toBottomOf="@+id/buttonDry" />

    <Button
        android:id="@+id/buttonFire"
        android:layout_width="157dp"
        android:layout_height="157dp"
        android:layout_marginTop="32dp"
        android:background="#8BC34A"
        android:text="FIRE FIELD ALARM"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/buttonManure"
        app:layout_constraintHorizontal_bias="0.34"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFieldB" />

    <Button
        android:id="@+id/buttonDry"
        android:layout_width="157dp"
        android:layout_height="157dp"
        android:layout_marginTop="32dp"
        android:background="#8BC34A"
        android:text="DRY FIELD ALARM"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toEndOf="@+id/buttonFieldB"
        app:layout_constraintTop_toBottomOf="@+id/buttonFieldA" />

    <TextView
        android:id="@+id/textViewContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Contact Us"
        android:textAllCaps="true"
        android:textColor="#FFEB3B"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonManure" />

</androidx.constraintlayout.widget.ConstraintLayout>